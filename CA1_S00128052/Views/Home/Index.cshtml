@model IEnumerable<CA1_S00128052.Models.Camp>

@{
    ViewBag.Title = "Index";
}
<div class="container" style="margin-top:70px">
    @Html.ActionLink("Create New", "Create", "",new { @class = "btn btn-success" })
    <div class="jumbotron" style="margin-top:70px">
        @if(Model!=null)
        {
        <table class="table table-condensed table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CampTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CampStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CampChildren)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampChildren.Count, "DisplayNone")
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.CampId }, new { @class = "btn btn-info btn-xs" })
                    </td>
                </tr>
            }

        </table>
        }
        else
        {
            <h3>No Camps Exist</h3>
        }
    </div>
</div>
@section scripts
{
    <script>
        toastr.options.showMethod = 'slideDown';
        toastr.options.closeButton = true;
        $(function () {
            toastr.success("Welcome to Camps Tracker", "Camps");
        });
    </script>

}
